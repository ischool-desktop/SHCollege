<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/xsl" href="format.xsl" ?>
<ValidateRule Name="高關懷特殊身分註記">
  <DuplicateDetection>
    <Detector Name="組合鍵值">
      <Field Name="學號" />
    </Detector>
  </DuplicateDetection>
  <FieldList>

    <Field Required="True" Name="學號" Description="學號">
      <Validate AutoCorrect="False" Description="「學號」不允許空白。" ErrorType="Error" Validator="不可空白" When="" />
      <Validate AutoCorrect="False" Description="「學號」在一般狀態不存在。" ErrorType="Error" Validator="學號是否存在" When="" />
    </Field>
    <!--<Field Required="false" Name="身分證" Description="身分證">

    </Field>-->
    <Field Required="false" Name="報名序號" Description="報名序號，長度必須固定8碼">
      <Validate AutoCorrect="False" Description="「報名序號」序號長度必須8碼。" ErrorType="Error" Validator="長度8" When="" />
    </Field>
    
    <Field Required="false" Name="學測班級" Description="學測當時學測班級">

    </Field>

    <Field Required="false" Name="學測座號" Description="學測當時學生座號">

    </Field>    
    

  </FieldList>
  <ValidatorList>
    <FieldValidator Name="學號是否存在" Type="IMPORTSATSTUDSTUDENTNUMBERCHECK"/>
    <FieldValidator Name="不可空白" Type="STRINGLENGTH">
      <MinLength>1</MinLength>
    </FieldValidator>
    <FieldValidator Name="長度8" Type="STRINGLENGTH">
      <MinLength>8</MinLength>
      <MinLength>8</MinLength>
    </FieldValidator>
    
    <FieldValidator Name="Integer10" Type="Integer">
      <MinValue>0</MinValue>
      <MaxValue>9</MaxValue>
    </FieldValidator>
    <FieldValidator Name="是列舉" Type="Enumeration">
      <Item Value="是">
        <Variation>是</Variation>
      </Item>
    </FieldValidator>
  </ValidatorList>
  <RowValidate>
  </RowValidate>
  <ConditionList />
</ValidateRule>